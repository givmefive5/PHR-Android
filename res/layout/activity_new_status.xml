<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ScrollView
	    android:id="@+id/ScrollView_status"
        android:layout_alignParentTop="true"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="vertical"
	    android:fillViewport="true">

        <EditText
	        android:id="@+id/txtStatus"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1.0"
	        android:background="#00000000"
            android:ems="10"
            android:hint="What are you doing?" 
            android:padding="10dp"
            android:inputType="textMultiLine">
              <requestFocus />
        </EditText>

    </ScrollView>

    <LinearLayout
        android:id="@+id/statusTabsPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@id/ScrollView_status"
        android:background="#E8E8E8" >

        <ImageButton
            android:id="@+id/btnTagFriend"
            android:background="@null"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_small_tag_friend" />

        <ImageButton
            android:id="@+id/btnCheckinLocation"
            android:background="@null"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_small_location" />

        <ImageButton
            android:id="@+id/btnAddPhoto"
            android:layout_width="wrap_content"
            android:background="@null"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_small_photo" />

        <ImageButton
            android:id="@+id/btnAddActions"
            android:background="@null"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_small_emotion" />

    </LinearLayout>

</RelativeLayout>
