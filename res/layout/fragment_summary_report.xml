<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="436dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="0dp"
        android:background="#00ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:weightSum="5" >

            <ImageView
                android:id="@+id/imgGemLevel"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:adjustViewBounds="true"
                android:paddingTop="15dp"
                android:src="@drawable/greengem"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3" >

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="50dp"
                    android:minWidth="25dip"
                    android:progressDrawable="@drawable/customprogressbar" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="500/1000"
                    android:textSize="20sp"
                    android:textStyle="bold" 
                    android:textColor="#f5f7fa"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutWeight"
            android:layout_width="match_parent"
            android:layout_height="300dp"
 			android:background="#80FFFFFF"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutWeight2"
            android:layout_width="fill_parent"
            android:layout_height="270dp"
            android:layout_marginTop="80dp"
            android:background="#80FFFFFF"
            android:weightSum="5" >

            <LinearLayout
                android:id="@+id/graph1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#80FFFFFF"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#80FFFFFF"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="15sp"
        			android:background="@drawable/customtextview"
        			android:textStyle="bold" 
                    android:text="BMI" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
        			android:background="@drawable/customtextview"
        			android:textStyle="bold" 
                    android:text="20" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="16sp"
        			android:background="@drawable/customtextview" 
        			android:textStyle="bold"
        			android:textColor ="#FF0000"
                    android:text="AVE" />

            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="270dp"
            android:layout_marginTop="80dp"
            android:background="#80FFFFFF"
            android:weightSum="5" >

            <LinearLayout
               android:id="@+id/graph2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#80FFFFFF"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#80FFFFFF"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
        			android:background="@drawable/customtextview"
        			android:textStyle="bold" 
                    android:text="95" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
        			android:background="@drawable/customtextview"
        			android:textStyle="bold" 
                    android:text="70" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="16sp"
        			android:background="@drawable/customtextview" 
        			android:textStyle="bold"
        			android:textColor ="#FF0000"
                    android:text="AVE" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    

</ScrollView>
