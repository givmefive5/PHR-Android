<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:padding="5dp" >

            <LinearLayout
                android:id="@+id/imageHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" >

                <ImageView
                    android:id="@+id/imgDailyGemLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/level_1_diamond" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/progressHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageHolder"
                android:orientation="vertical" >

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:minWidth="25dip"
                    android:progress="50"
                    android:progressDrawable="@drawable/customprogressbar" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/progressBar1"
                    android:layout_alignLeft="@id/progressBar1"
                    android:layout_alignRight="@id/progressBar1"
                    android:layout_alignTop="@id/progressBar1"
                    android:layout_marginRight="5dp"
                    android:background="#00000000"
                    android:gravity="right"
                    android:text="750/1500"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FCFBFA" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="25dp" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:src="@drawable/icon_food" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ProgressBar
                        android:id="@+id/ProgressBar02"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:progress="33"
                        android:minWidth="25dip"
                        android:progressDrawable="@drawable/customprogressbar" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ProgressBar02"
                        android:layout_alignLeft="@+id/ProgressBar02"
                        android:layout_alignRight="@+id/ProgressBar02"
                        android:layout_alignTop="@+id/ProgressBar02"
                    	android:text="1/3" 
                        android:background="#00000000"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#FCFBFA" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="25dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:src="@drawable/icon_activity" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ProgressBar
                        android:id="@+id/ProgressBar01"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:minWidth="25dip"
                        android:progress="70"
                        android:progressDrawable="@drawable/customprogressbar" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ProgressBar01"
                        android:layout_alignLeft="@+id/ProgressBar01"
                        android:layout_alignRight="@+id/ProgressBar01"
                        android:layout_alignTop="@+id/ProgressBar01"
                        android:background="#00000000"
                        android:gravity="center"
                    	android:text="30mins to go" 
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#FCFBFA" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_medal_bloodpressure_grey" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_medal_bloodsugar" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_medal_weight" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_medal_checkup" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
